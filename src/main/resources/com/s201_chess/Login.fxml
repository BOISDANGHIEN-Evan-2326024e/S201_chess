<BorderPane styleClass="root" stylesheets="@Login.css" xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.s201_chess.LoginController">
    <center>
        <VBox fx:id="vb" alignment="CENTER" >
            <ImageView fitHeight="100" fitWidth="200"
                       pickOnBounds="true" preserveRatio="true">
                <Image url="@chess.com.png"/>
            </ImageView>
            <!--    <Text id="text" text="CHESSing" textAlignment="CENTER"/>-->

            <!--    <Label text="User Id:" GridPane.columnIndex="0" GridPane.rowIndex="1" />-->

            <TextField GridPane.columnIndex="1" GridPane.rowIndex="1" text="Please enter your user id:"/>
            <HBox>
                <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>

                <PasswordField GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            </HBox>

            <Button onAction="#okClicked" text="Log in" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <!--    <Button onAction="#cancelClicked" prefWidth="67.0" text="Cancel" GridPane.columnIndex="1" GridPane.rowIndex="3"/>-->
        </VBox>
    </center>
    <opaqueInsets>
        <Insets/>
    </opaqueInsets>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0"/>
    </padding>
<!--    <Button text="New? Sign up - and start playing chess!"/>-->
</BorderPane>